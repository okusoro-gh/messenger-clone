<div id="user-id" data-user-id="<%= current_user.id %>"></div>
<div id="room-id" data-room-id="<%= @room.try(:id)%>"></div>

<div class="container-fluid">
  <div class="row">
    <div class="col-3 rooms-sidebar">
      <%= render 'rooms/form', room: Room.new %>
      <hr>
      <% @rooms.each do |room| %>
        <%= link_to room, class: 'room-link' do %>
          <% active_class = (@room == room) ? 'active' : '' %>
          <div class="card no-outline mb-2 room-card <%= active_class %>">
            <div class="card-body">
              <span class="name"><%= room.name %><br></span>
              <span class="member-count"><small><%= room.users.uniq.count %> Members</small></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light bg-light mb-4">
            <%= @room.name %>
            <ul class="navbar-nav">
              <li class="nav-item">
                Hello <%= current_user.username %>
              </li>
            </ul>
          </nav>
          <div id="messages">
          <% @room.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
          <% end %>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new , room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
